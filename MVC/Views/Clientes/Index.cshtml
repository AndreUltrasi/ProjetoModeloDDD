@model IEnumerable<ProjetoModeloDDD.MVC.ViewModels.ClienteViewModel>

@{
    ViewBag.Title = "Inicio";
}

<h2>Início</h2>


<p>
    @Html.ActionLink("Criar Novo Cliente", "Criar")
</p>
<p>
    @Html.ActionLink("Clientes Especiais", "Especiais")
</p>

@if (TempData["DeleteError"] != null)
{
    <h4 style="color:red">@TempData["DeleteError"] </h4>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.ActionLink("Editar Cliente", "Editar", new { id = item.ClienteId }) |
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.ClienteId }) |
                @Html.ActionLink("Deletar Cliente", "Deletar", new { id = item.ClienteId })
            </td>
        </tr>
    }

</table>
